    <h1>{{ 'edit.person'|trans }}</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <a class="btn btn-default" href="{{ path('users_index') }}">{{ 'back.to.list'|trans }}</a>
        <input class="btn btn-default" type="submit" value="{{ 'edit'|trans }}" />
    {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
